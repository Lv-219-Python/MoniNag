{
    "compilerOptions": {
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        // types option has been previously configured
         "types": [
            // add node as an option
            "node",
            "core-js"
         ],
         // typeroots option has been previously configured
         "typeroots": [
            // add path to @types
            "node_modules/@types"
         ]
    },

    "exclude": [
        "node_modules"
    ]
}
